html
  head
    title Adminlte
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  body.skin-red
    div.wrapper
      header.main-header
        = link_to t('views.admin.top'), root_path, { class: "logo" }
        nav.navbar.navbar-static-top role="navigation"
          a.sidebar-toggle data-toggle="offcanvas" role= "button"
          ul.nav.navbar-nav
            li
              = link_to "Navigation1", {}
            li
              = link_to "Navigation2", {}
          .navbar-custom-menu
            ul.nav.navbar-nav
              li

      side.main-sidebar
        section.sidebar
          ul.sidebar-menu
            .user-panel
              .pull-left.image
              .pull-left.info
            li.header 機能一覧
            li.treeview
              = link_to "#", class: "i fa fa-check-square"
                = "　" + t('views.admin.user')
                span.pull-right-container
                  i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  = link_to "#", class: "i fa fa-check-square-o"
                    |　test
                li
                  = link_to "#", class: "i fa fa-check-square-o"
                    |　test
                li
                  = link_to "#", class: "i fa fa-check-square-o"
                    |　test
            li
              = link_to "#", class: "i fa fa-check-square"
                = "　" + t('views.admin.trade')
            li
              = link_to "#", class: "i fa fa-check-square"
                = "　" + t('views.admin.stock_account')
            li
              = link_to admin_stock_companies_path, class: "i fa fa-check-square"
                = "　" + t('views.admin.stock_company')
            li
              = link_to "#", class: "i fa fa-check-square"
                = "　" + t('views.admin.brand')
            li
              = link_to "#", class: "i fa fa-check-square"
                = "　" + t('views.admin.field')
            li
              = link_to "#", class: "i fa fa-check-square"
                = "　" + t('views.admin.market')

      div.content-wrapper
        - flash.each do |key, value|
          - key = key == 'notice' ? 'success' : 'danger'
          = content_tag :div, value, class: "alert alert-#{key}"
        section.content-header
          h3
            == breadcrumbs separator: " / "
          = yield

      br
      br
        .alert.alert-success.alert-dismissible
          button.close data-dismiss="alert" aria-hidden="true" type="button" ×
          h4
            i.icon.fa.fa-check
              | Alert
          | Success alert preview. This alert is dismissable.
      footer.main-footer
        div.pull-right.hidden-xs Version1.0
